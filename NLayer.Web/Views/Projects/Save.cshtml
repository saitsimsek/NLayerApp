@{
    ViewData["Title"] = "Save";
}
@model ProjectWithDetailDto

<div class="row">

    <div class="portlet light bordered" id="form_wizard_1">
        <div class="portlet-body form">
            <form asp-action="SaveProjectEdit" method="POST" asp-controller="Projects">

                <div class="col-md-6">
                    <div class="portlet light portlet-fit portlet-form bordered">
                        <div class="portlet-title">
                            <div class="caption">
                                <i class=" icon-layers font-green"></i>
                                <span class="caption-subject font-green sbold uppercase">Proje Bilgileri</span>
                            </div>

                        </div>
                        <div class="portlet-body">
                            <div class="form-group row">
                                <label asp-for="Project.Name" class="control-label col-md-2 text-right"></label>
                                <div class="col-md-3">
                                    <input asp-for="Project.Name" class="form-control" />
                                    <span asp-validation-for="Project.Name" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="form-group row">
                                <label asp-for="Project.Purpose" class="control-label col-md-2 text-right"></label>
                                <div class="col-md-3">
                                    <input asp-for="Project.Purpose" class="form-control" />
                                    <span asp-validation-for="Project.Purpose" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="form-group row">
                                <label asp-for="Project.Unit" class="control-label col-md-2 text-right"></label>
                                <div class="col-md-3">
                                    <input asp-for="Project.Unit" class="form-control" />
                                    <span asp-validation-for="Project.Unit" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="form-group row">
                                <label asp-for="Project.Description" class="control-label col-md-2 text-right"></label>
                                <div class="col-md-3">
                                    <input asp-for="Project.Description" class="form-control" />
                                    <span asp-validation-for="Project.Description" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="form-group row">
                                <label asp-for="Project.ApprovalStatusId" class="control-label col-md-2 text-right"></label>
                                <div class="col-md-3">
                                    <select asp-for="Project.ApprovalStatusId" asp-items="ViewBag.ApprovalStatus" class="form-control">
                                        <option disabled selected>Seçiniz</option>
                                    </select>
                                    <span asp-validation-for="Project.ApprovalStatusId" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>




                <div class="col-md-6">
                    <div class="portlet light portlet-fit portlet-form bordered">
                        <div class="portlet-title">
                            <div class="caption">
                                <i class=" icon-layers font-green"></i>
                                <span class="caption-subject font-green sbold uppercase">Proje Bilgileri</span>
                            </div>

                        </div>
                        <div class="portlet-body">
                            <div class="form-group row">
                                <label asp-for="Details.SubTechnologyName" class="control-label col-md-2 text-right"></label>
                                <div class="col-md-3">
                                    <input asp-for="Details.SubTechnologyName" class="form-control" />
                                    <span asp-validation-for="Details.SubTechnologyName" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="form-group row">
                                <label asp-for="Details.AvailableTRL" class="control-label col-md-2 text-right"></label>
                                <div class="col-md-3">
                                    <input asp-for="Details.AvailableTRL" class="form-control" />
                                    <span asp-validation-for="Details.AvailableTRL" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="form-group row">
                                <label asp-for="Details.GoalTRL" class="control-label col-md-2 text-right"></label>
                                <div class="col-md-3">
                                    <input asp-for="Details.GoalTRL" class="form-control" />
                                    <span asp-validation-for="Details.GoalTRL" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="form-group row">
                                <label asp-for="Details.AvailableTRLDocumentation" class="control-label col-md-2 text-right"></label>
                                <div class="col-md-3">
                                    <input asp-for="Details.AvailableTRLDocumentation" class="form-control" />
                                    <span asp-validation-for="Details.AvailableTRLDocumentation" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="form-group row">
                                <label asp-for="Details.RiskPlan" class="control-label col-md-2 text-right"></label>
                                <div class="col-md-3">
                                    <input asp-for="Details.RiskPlan" class="form-control" />
                                    <span asp-validation-for="Details.RiskPlan" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="form-group row">
                                <label asp-for="Details.ImportantConsiderations" class="control-label col-md-2 text-right"></label>
                                <div class="col-md-3">
                                    <input asp-for="Details.ImportantConsiderations" class="form-control" />
                                    <span asp-validation-for="Details.ImportantConsiderations" class="text-danger"></span>
                                </div>
                            </div>

                        </div>
                    </div>
                </div>

                



                <div class="form-group">
                    <div class="form-actions">
                        <div class="row">
                            <div class="col-md-offset-3 col-md-9">
                                <input type="submit" class="btn btn-outline green " value="Kaydet" />
                            </div>
                        </div>
                    </div>
                </div>
            </form>


        </div>
    </div>

</div>





